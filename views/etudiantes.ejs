<% include _header %>
<div class="container">
    <% usuarios.forEach((usuario) => { %> 
        <% if(usuario.role === "estudiante") { %>
            <div class="jumbotron" id="marginStudent">
                <div class="row">
                    <div class="col-md-6">
                        <h3><a class="btn btn-outline-info btn-lg" href="/etudiantes/<%= usuario.username %>">
                        <%= usuario.name() %>
                        </a></h3>
                        <h6><%= usuario.dateRegistrement %></h6>
                        <div class="row">
                            <div class="col-md-5">
                            <p><%= usuario.telephone() %></p>
                            </div>
                            <div class="col-md-5">
                            <p><%= usuario.email() %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <% if(usuario.resultado) { %> 
                            <a class="btn btn-outline-danger" href="/docs/<%= usuario.username %>-resultado.pdf" download="<%= usuario.a_paterno %>-<%= usuario.nombre %>-resultado.pdf">Descargar resultados</a>
                        <% } else { %>
                            <button class="btn btn-outline-warning" href="#">No hay resultados a√∫n.</button>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>
    <% }) %>
</div>
<% include _footer %>